package internal

import (
	"strconv"
	"strings"
)

func ParseInput(input string) ([]int, []int) {
	s := strings.ReplaceAll(input, "\r\n", "\n")
	n := strings.ReplaceAll(s, "\r", "\n")

	d := strings.Split(n, "\n")

	f := make([]string, 0)
	for _, p := range d {
		f = append(f, strings.Split(p, "   ")...)
	}

	l := make([]int, 0)
	r := make([]int, 0)
	for i, p := range f {
		n, err := strconv.Atoi(p)
		if err != nil {
			panic(err)
		}

		if i%2 == 0 {
			l = append(l, n)
		} else {
			r = append(r, n)
		}
	}

	return l, r
}
